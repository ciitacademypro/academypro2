@model EnquiryModel

@{
	ViewData["Title"] = "Create Enquiry";
	int CurrentYear = DateTime.Now.Year;
	
}


<div class="container">

	<div class="row">
		<div class="col-lg-12">
			<a asp-action="index" asp-controller="Enquiry" asp-area="Student" class="btn btn-default btn-success" style="float:right; position:relative;">Enquirys List</a>
			<h2 class="st_title"><i class="uil uil-analysis"></i> Create New Enquiry</h2>
		</div>
	</div>

	<form method="post" asp-action="create" asp-controller="Enquiry" asp-area="Student" id="formCreateEnquiry">

		<div class="row">

			@* 			<div class="col-12">
			<div asp-validation-summary="All" class="text-danger"></div>
			</div>
			*@
			
			<div class="col-12 ">
				<div class="">
					<div id="add-course-tab" class="">
						<div class="">
							<div class="course__form">
								<div class="general_info10">

									<div class="row">

										<div class="col-md-4 col-lg-3">
											<div class="ui search focus mt-30 lbel25">
												<label>Candidate Name*</label>
												<div class="ui left icon input swdh19">
													<input class="prompt srch_explore" type="text" asp-for="CandidateName" placeholder="Candidate Name here" maxlength="30">
												</div>
												<span asp-validation-for="CandidateName" class="text-danger"></span>
											</div>
										</div>						

										<div class="col-md-4 col-lg-3">
											<div class="ui search focus mt-30 lbel25">
												<label>Email Address*</label>
												<div class="ui left icon input swdh19">
													<input class="prompt srch_explore" type="email" asp-for="EmailAddress" placeholder="Email Address here" maxlength="100">
												</div>
												<span asp-validation-for="EmailAddress" class="text-danger"></span>
											</div>
										</div>

										<div class="col-md-4 col-lg-3">
											<div class="ui search focus mt-30 lbel25">
												<label>Mobile Number*</label>
												<div class="ui left icon input swdh19">
													<input class="prompt srch_explore" type="text" asp-for="MobileNumber" placeholder="Mobile Number here" maxlength="10">
												</div>
												<span asp-validation-for="MobileNumber" class="text-danger"></span>
											</div>
										</div>

										<div class="col-md-4 col-lg-3">
											<div class="mt-30 lbel25">
												<label>City Name*</label>
											</div>
											<select class="ui hj145 dropdown cntry152 prompt srch_explore" asp-for="CityId" name="cityId">
												<option value="">Select City</option>
												@foreach (var item in ViewBag.Cities)
												{
													<option value="@item.CityId">@item.CityName</option>
												}
											</select>
											<span asp-validation-for="CityId" class="text-danger"></span>
										</div>

										<div class="col-md-4 col-lg-3">
											<div class="ui search focus mt-30 lbel25">
												<label>Local Address*</label>
												<div class="ui left icon input swdh19">
													<input class="prompt srch_explore" type="text" asp-for="LocalAddress" placeholder="Local Address here" maxlength="150">
												</div>
													<span asp-validation-for="LocalAddress" class="text-danger"></span>
											</div>
										</div>																			

										<div class="col-md-4 col-lg-3">
											<div class="mt-30 lbel25">
												<label >Gender*</label>
											</div>
													<select class="ui hj145 dropdown cntry152 prompt srch_explore" asp-for="Gender" class="form-control">
														<option value="">Select Gender</option>
												<option value="Male">Male</option>
												<option value="Female">Female</option>
												<option value="Other">Other</option>
													</select>
													<span asp-validation-for="Gender" class="text-danger"></span>
										
										</div> 

										<div class="col-md-4 col-lg-3">
											<div class="mt-30 lbel25">
												<label>Qualification*</label>
											</div>
											<select class="ui hj145 dropdown cntry152 prompt srch_explore" asp-for="QualificationId" name="QualificationId">
												<option value="">Select Qualification</option>
												@foreach (var item in ViewBag.Qualifications)
												{
													<option value="@item.QualificationId">@item.QualificationName</option>
												}
											</select>
											<span asp-validation-for="QualificationId" class="text-danger"></span>
										</div>

										<div class="col-md-4 col-lg-3">
											<div class="mt-30 lbel25">
												<label>Date of Birth*</label>
											</div>											
											<div class="ui left icon input swdh19">
												<input class="prompt srch_explore" type="date" asp-for="DateOfBirth" placeholder="Date of Birth here" >
											</div>
											<span asp-validation-for="DateOfBirth" class="text-danger"></span>
										</div>

										<div class="col-md-4 col-lg-3">
											<div class="mt-30 lbel25">
												<label>Lead Source*</label>
											</div>
											<select class="ui hj145 dropdown cntry152 prompt srch_explore" asp-for="LeadSourceId" name="LeadSourceId">
												<option value="">Select Lead Source</option>
												@foreach (var item in ViewBag.LeadSources)
												{
													<option value="@item.LeadSourceId">@item.LeadSourceName</option>
												}
											</select>
											<span asp-validation-for="LeadSourceId" class="text-danger"></span>
										</div>

										<div class="col-md-4 col-lg-3">
											<div class="mt-30 lbel25">
												<label>Enquiry For*</label>
											</div>
											<select class="ui hj145 dropdown cntry152 prompt srch_explore" asp-for="EnquiryForId" name="enquiryforId">
												<option value="">Select Enquiry For</option>
												@foreach (var item in ViewBag.Enquiries)
												{
													<option value="@item.EnquiryForId">@item.EnquiryForName</option>
												}
											</select>
											<span asp-validation-for="EnquiryForId" class="text-danger"></span>
										</div>


										<div class="col-md-4 col-lg-3">
											<div class="mt-30 lbel25">
												<label>Branch Name*</label>
											</div>
											<select class="ui hj145 dropdown cntry152 prompt srch_explore" asp-for="BranchId" name="branchId">
												<option value="">Select Branch</option>
												@foreach (var item in ViewBag.Branches)
												{
													<option value="@item.BranchId">@item.BranchName</option>
												}
											</select>
											<span asp-validation-for="BranchId" class="text-danger"></span>
										</div>

										<div class="col-md-12 col-lg-12">
											<div class="ui search focus mt-30 lbel25">
												<label>Remark*</label>
												<div class="ui left icon input swdh19">
													<input class="prompt srch_explore" type="text" asp-for="Remark" placeholder="Remark here" maxlength="100">
												</div>
												<span asp-validation-for="Remark" class="text-danger"></span>
											</div>
										</div>

									</div>
								</div>
							</div>
							<div class="step-footer step-tab-pager flex content-justify-center" style="margin-bottom:50px; display: flex; justify-content: center; align-items: center;">
								<button type="submit" class="btn btn-lg btn-default steps_btn">Submit</button>
							</div>
						</div>
					</div>
				</div>
			</div>
	</form>


</div>
